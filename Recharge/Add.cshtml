@{
    Layout = "/Views/Shared/_NoLoginLayout.cshtml";
}
<style>.table tr:first-child > td {border-top:0px solid #f4f5f8;} .table tr > td:last-child {padding-right:30px;} .table th,.table td {height:69px;font-size:16px;} .table th,.table td {border-bottom:1px solid #CCCCCC;border-top:none;} .light-color {color:#A9A9A9;} .no-bd-btm {border-bottom:none !important;}
.table thead th {text-transform:none;}
.m-content {height:100%;}
.m-portlet {margin-bottom:0;}
</style>
<div class="m-grid__item m-grid__item--fluid m-wrapper">
    <div class="m-content">
        <div class="row" id="purchase-div">
            <div class="col-lg-12">
                <div class="m-portlet m-portlet--mobile">
                    <div class="m-portlet__head" style="border-bottom:1px solid #CCCCCC;">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title" style="width:100%">
                                <h3 class="m-portlet__head-text" style="font-weight:700;font-size:16px !important;">AddPublishInfo</h3>
                                <div class="m-portlet__head-tools"><a class="btn btn-focus" href="#J_modal_add_purchase" data-toggle="modal">增加</a></div>
                            </div>
                        </div>
                    </div>
                    <div class="m-portlet__body mb-table-scroll-x" style="padding:0 25px 25px 25px;">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>用户信息</th>
                                    <th>购买代币</th>
                                    <th>支付信息</th>
                                    <th>购买时间</th>
                                    <th>销售人员</th>
                                    <th>代理信息</th>
                                    <th>来源地址</th>
                                    <th>锁定天数</th>
                                    <th>操作信息</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td></td>
                                    <td>0 SILK</td>
                                    <td>$0.00</td>
                                    <td>$0.00</td>
                                    <td>$0.00</td>
                                    <td>$0.00</td>
                                    <td>$0.00</td>
                                    <td>$0.00</td>
                                    <td>$0.00</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="J_modal_add_purchase" tabindex="-1" role="dialog" style="display:none;" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form action="" method="POST" id="J_add_purchase_form">
                <div class="modal-header">
                    <h5 class="modal-title">添加购买记录</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span>
                </button>
                </div>
                <div class="modal-body">
                    <div class="form-group m-form__group">
                        <label for="" class="form-control-label">选择用户</label>
                        <input type="password" class="form-control m-input form-control-sm" id="" name="username" required>
                    </div>
                    <div class="form-group m-form__group">
                        <label for="" class="form-control-label">代币数量</label>
                        <input type="password" class="form-control m-input form-control-sm" id="" name="new_password" required placeholder="">
                    </div>
                    <div class="form-group m-form__group">
                        <label for="" class="form-control-label">支付币种</label>
                        <select class="custom-select form-control form-control-lg" name="nationality" required="">
                            <option value="">Select Nationality</option>
                        </select>
                    </div>
                    <div class="form-group m-form__group">
                        <label for="" class="form-control-label">支付金额</label>
                        <input type="password" class="form-control m-input form-control-sm" id="" name="new_password" required placeholder="">
                    </div>
                    <div class="form-group m-form__group">
                        <label for="" class="form-control-label">购买时间</label>
                        <input type="password" class="form-control m-input form-control-sm" id="" name="new_password" required placeholder="">
                    </div>
                    <div class="form-group m-form__group">
                        <label for="" class="form-control-label">销售人员</label>
                        <select class="custom-select form-control form-control-lg" name="nationality" required="">
                            <option value="">Select Nationality</option>
                        </select>
                    </div>
                    <div class="form-group m-form__group">
                        <label for="" class="form-control-label">代理人员</label>
                        <input type="password" class="form-control m-input form-control-sm" id="" name="new_password" required placeholder="">
                    </div>
                    <div class="form-group m-form__group">
                        <label for="" class="form-control-label">代理佣金比例</label>
                        <input type="password" class="form-control m-input form-control-sm" id="" name="new_password" required placeholder="">
                    </div>
                    <div class="form-group m-form__group">
                        <label for="" class="form-control-label">来源地址</label>
                        <textarea type="password" class="form-control m-input form-control-sm" id="" name="new_password" required></textarea>
                    </div>
                    <div class="has-danger">
                        <div class="form-control-feedback"></div>
                    </div>
                    <div class="m-loader m-loader--brand" style="width: 30px; display: none;"></div>
                </div>
                <div style="border-top: 1px solid #e9ecef;padding:15px 25px 25px">
						<div class="row" style="margin-bottom: 15px"><div class="col-lg-12" ></div></div>
						<div class="row">
							<div class="col-lg-12 text-right" >
								<button type="reset" class="btn btn-default m-btn--pill" data-dismiss="modal">取消</button>
		                    	<button type="submit" class="btn btn-primary  m-btn--pill">添加</button>
							</div>
						</div>
				</div>
				
            </form>
        </div>
    </div>
</div>
@section script{ 
<script>
$(function () {
    $('#J_add_purchase_form button[type="submit"]').on('click', function (e) {
        $('#J_add_purchase_form').validate({
            rules: {
                username: {
                    required: true
                },
                username: {
                    required: true
                }
            }
        });
    });
});
</script>
}
