@using SKC.Entity.Models;
@model ShareRewardListPageModel
@{
    // Layout = null;
    int total = Model.ItemList.Count();
}
<style>
    .m-grid.m-grid--ver-desktop.m-grid--desktop {
        display: flex;
        flex-direction: row;
    }

        .m-grid.m-grid--ver-desktop.m-grid--desktop > .m-grid__item.m-grid__item--fluid {
            flex: 1 0 auto;
        }

    .rowitem-none {
        text-align: center;
        padding: 1rem 0;
    }

    .m-content,
    .m-packet__container {
        height: 100%;
    }

    .m-packet__wrapper {
        padding-top: 20px;
        width: 430px;
        margin: 0 auto;
    }

    .m-stack.m-stack--flex-general .m-packet__wrapper {
        flex: 1 0 auto;
    }

    .m-packet__wrapper .red-packet {
        position: relative;
        padding: 30px 0;
        text-align: center;
        color: #333;
    }

    .m-packet__wrapper .avatar {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 4rem;
        height: 4rem;
        margin: 0 auto;
        border-radius: 0.4285714rem;
        border: 1px solid #feb041;
        background-color: #fff;
    }

        .m-packet__wrapper .avatar > img {
            max-width: 100%;
            max-height: 100%;
        }

    .m-packet__wrapper .sendname {
        font-size: 1.15rem;
        margin: 1rem 0 0.3rem 0;
    }

    .m-packet__wrapper .sendopt {
        font-size: 1rem;
    }

    .m-packet__wrapper .price {
        margin-top: 10px;
        margin-bottom: 4px;
        line-height: 1;
    }

        .m-packet__wrapper .price > strong {
            font-size: 3rem;
            font-family: arial;
        }

        .m-packet__wrapper .price > em {
            font-size: 1.15rem;
            font-style: normal;
        }

    .m-packet__wrapper .total {
        margin-top: 20px;
        margin-left: 30px;
        margin-right: 30px;
    }

        .m-packet__wrapper .total .total-numb {
            color: #888;
            font-size: 1em;
        }

            .m-packet__wrapper .total .total-numb strong {
                display: block;
                font-weight: normal;
                font-size: 2.4rem;
                line-height: 1;
            }

    .m-packet__wrapper .btn-outline-danger {
        margin-top: 4px;
        padding-left: 3.25rem;
        padding-right: 3.25rem;
        background-color: #fff;
        color: #ff9600;
        border-color: #ff9600;
    }

        .m-packet__wrapper .btn-outline-danger:hover {
            background-color: #ff9600;
            color: #fff;
        }

    .m-packet__wrapper .date-filter {
        position: absolute;
        top: 0px;
        right: 20px;
    }

        .m-packet__wrapper .date-filter .filter-control-select {
            border: none;
            background: none;
            padding-right: 0 \9;
            background: none \9;
            outline: none;
            color: #ff9400;
            appearance: none;
            -moz-appearance: none;
            -webkit-appearance: none;
        }

        .m-packet__wrapper .date-filter .arrow-btm {
            font-size: 0;
            text-align: center;
        }

            .m-packet__wrapper .date-filter .arrow-btm:after {
                display: inline-block;
                width: 8px;
                height: 8px;
                overflow: hidden;
                content: "";
                border-right: 1px solid #ff9400;
                border-bottom: 1px solid #ff9400;
                transform: rotate(45deg);
            }

    .m-packet__wrapper .draw-packet {
        position: relative;
        background-color: #fff;
        flex: 1 0 auto;
        overflow: hidden;
    }

    .m-packet__wrapper .draw-packet-inner {
        width: 100%;
        height: 100%;
    }

    .m-packet__wrapper .draw-packet-tle {
        padding: 10px 15px;
        border-bottom: 1px solid #ddd;
        font-size: 1rem;
        color: #888;
    }

    .m-packet__wrapper .rowitem {
        border-bottom: 1px solid #ddd;
        padding: 10px 0;
        position: relative;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-align-items: flex-star;
        align-items: flex-star;
    }

        .m-packet__wrapper .rowitem:last-child {
            border-bottom: none;
        }

    .m-packet__wrapper .rowmd {
        -webkit-box-flex: 1;
        -webkit-flex: 1;
        flex: 1;
    }

    .m-packet__wrapper .rowitem-ul {
        padding: 0 15px;
    }

    .m-packet__wrapper .headpic {
        float: left;
        width: 2.5rem;
        height: 2.5rem;
        border-radius: 4px;
        overflow: hidden;
        text-align: center;
        margin-right: 1rem;
    }

        .m-packet__wrapper .headpic img {
            float: left;
            max-width: 100%;
        }

    .m-packet__wrapper .nametxt {
        font-size: 1.15rem;
        line-height: 1;
        margin-bottom: 0.4rem;
    }

    .m-packet__wrapper .datenub {
        font-size: 1em;
        color: #bbb;
        line-height: 1;
    }

    .m-packet__wrapper .datact {
        margin-left: 2em;
    }

    .m-packet__wrapper .distrib {
        text-align: right;
        line-height: 1;
    }

    .m-packet__wrapper .linefeed {
        margin-top: 0.5rem;
    }

    .m-packet__wrapper .text-orange {
        color: #ff9600;
    }

    .m-packet__wrapper .text-gray {
        color: #bbb;
    }

    @@media (max-width: 767.98px) {
        .m-packet__wrapper {
            width: 100%;
            padding-top: 0;
        }

        .m-body .m-content {
            padding: 0;
        }

        .m-packet__wrapper .red-packet {
            background-color: #f0f0f0;
        }

        .m-content--skin-light2 .m-body {
            background-color: #fff;
        }

        .m-packet__wrapper .red-packet {
            padding-top: 50px;
        }

        .m-packet__wrapper .date-filter {
            top: 20px;
        }
    }
</style>
<div class="m-grid__item m-grid__item--fluid m-wrapper">
    <div class="m-content">
        <div class="m-packet__container m-stack m-stack--flex-general">
            <div class="m-packet__wrapper">
                <div class="red-packet">
                    <div class="avatar"><img width="80%" src="data:image/png;base64," /></div>
                    <div class="sendname"><span>@Model.Source</span>@Html.GetTansByLan("packet-share-01", " Received")</div>
                    <div class="price"><strong>@Model.ItemList.Sum(i => i.Amount).ToString("0.000")</strong><span>@Html.GetTansByLan("packet-silk-alias-01", "SILK")</span></div>
                </div>
                <div class="draw-packet">
                    <div class="draw-packet-inner">
                        <div class="rowitem-ul">

                            @if (Model.ItemList != null && Model.ItemList.Count() > 0)
                            {
                                foreach (var item in Model.ItemList)
                                {
                                    <div class="rowitem">
                                        <div class="rowmd">
                                            <div class="nametxt">
                                                @if (item.UserName.Length == 1)
                                                {
                                                    <span>@(item.UserName + "*****")</span>
                                                }
                                                else if (item.UserName.Length == 2)
                                                {
                                                    <span>@(item.UserName + "****")</span>
                                                }
                                                else
                                                {
                                                    <span>@(item.UserName.Substring(0, 2) + "***" + item.UserName.Substring(item.UserName.Length - 1, 1))</span>
                                                }
                                            </div>
                                            <div class="datenub">@item.Data.CreateTimeDatetime.ToString("MM-dd HH:mm")</div>
                                        </div>
                                        <div class="rowft"><div class="distrib">@item.Data.AmountDecimal.ToString("0.000") @Html.GetTansByLan("packet-silk-alias-01", "SILK")</div></div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="rowitem-none">
                                    @Html.GetTansByLan("packet-share-02", "No data available")
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
